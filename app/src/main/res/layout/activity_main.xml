<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.anpstudio.login_animation.MainActivity"
    android:background="@color/colorAccent"
    >

  <LinearLayout
      android:animateLayoutChanges="true"
      android:id="@+id/container_form"
      android:layout_alignParentBottom="true"
      android:padding="5dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorWhite"
      >

    <EditText
        android:paddingLeft="10dp"
        android:hint="@string/main_enter_email"
        android:textSize="@dimen/text_normal"
        android:textCursorDrawable="@null"
        android:id="@+id/main_edit_email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextEdit"
        android:minHeight="48dp"
        />

    <Button
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/main_button_next"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_continue"
        android:background="@drawable/button_main"
        android:textSize="@dimen/text_button"
        android:textColor="@color/colorWhite"
        style="?android:attr/selectableItemBackground"
        />

  </LinearLayout>
</RelativeLayout>
